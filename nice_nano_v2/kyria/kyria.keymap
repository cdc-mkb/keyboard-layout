#define DEFAULT 0
#define LAYER_ONE 1
#define LAYER_TWO 2
#define LAYER_THREE 3

#define NONE 0

&mt {
    tapping-term-ms = <300>;
    flavor = "tap-preferred";
};

/ {

    behaviors {
        // todo try mt behaviour
        comma_dot: comma_dot {
            compatible = "zmk,behavior-tap-dance";
            label = "comma_dot";
            #binding-cells = <0>;
            tapping_term_ms = <250>;
            bindings = <&kp DE_COMM>, <&kp DE_DOT>;
        };

        quotes: quotes {
            compatible = "zmk,behavior-tap-dance";
            label = "quotes";
            #binding-cells = <0>;
            tapping_term_ms = <250>;
            bindings = <&kp DE_QUOT>, <&kp DE_DQUO>;
        };

        ques_exlm: ques_exlm{
            compatible = "zmk,behavior-tap-dance";
            label = "ques_exlm";
            #binding-cells = <0>;
            tapping_term_ms = <250>;
            bindings = <&kp DE_QUES>, <&kp DE_EXLM>;
        };
        
        v_j: v_j {
            compatible = "zmk,behavior-tap-dance";
            label = "v_j";
            #binding-cells = <0>;
            tapping_term_ms = <250>;
            bindings = <&kp DE_V>, <&kp DE_J>;
        };

        k_w: k_w {
            compatible = "zmk,behavior-tap-dance";
            label = "k_w";
            #binding-cells = <0>;
            tapping_term_ms = <250>;
            bindings = <&kp DE_K>, <&kp DE_W>;
        };

        y_q: y_q {
            compatible = "zmk,behavior-tap-dance";
            label = "y_q";
            #binding-cells = <0>;
            tapping_term_ms = <250>;
            bindings = <&kp DE_Y>, <&kp DE_Q>;
        };

        abk: abk {
            compatible = "zmk,behavior-tap-dance";
            label = "abk";
            #binding-cells = <0>;
            tapping_term_ms = <250>;
            bindings = <&kp DE_LABK>, <&kp DE_RABK>;
        };

        brc: brc {
            compatible = "zmk,behavior-tap-dance";
            label = "brc";
            #binding-cells = <0>;
            tapping_term_ms = <250>;
            bindings = <&kp DE_LBRC>, <&kp DE_RBRC>;
        };

        prn: prn {
            compatible = "zmk,behavior-tap-dance";
            label = "prn";
            #binding-cells = <0>;
            tapping_term_ms = <250>;
            bindings = <&kp DE_LPRN>, <&kp DE_RPRN>;
        };
    
    };

    combos {
        compatible = "zmk,combos";
        combo_adia {
            timeout-ms = <100>;
            key-positions = <27 28>;
            bindings = <&kp DE_ADIA>;
            layers = <0>;
        };
        comb_odia {
            timeout-ms = <100>;
            key-positions = <26 27>;
            bindings = <&kp DE_ODIA>;
            layers = <0>;
        };
        comb_udia {
            timeout-ms = <100>;
            key-positions = <35 36>;
            bindings = <&kp DE_UDIA>;
            layers = <0>;
        };        
        comb_ss {
            timeout-ms = <100>;
            key-positions = <36 37>;
            bindings = <&kp DE_SS>;
            layers = <0>;
        };
    };
};

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
            &none &kp DE_Z      &kp DE_L       &kp DE_U       &kp DE_A      &none                             &none          &kp DE_B      &kp DE_D       &kp DE_G       &y_q          &none
            &none &mt LALT DE_C &mt LSHFT DE_R &mt LCTRL DE_I &mt LGUI DE_E &none                             &none          &mt LGUI DE_N &mt LCTRL DE_T &mt LSHFT DE_S &mt LALT DE_H &none
            &none &v_j          &kp DE_X       &kp DE_P       &kp DE_O      &kp SPACE &none &none &none &none &sk LEFT_SHIFT &kp DE_F      &to LAYER_ONE  &kp DE_M       &k_w          &none
                                               &none          &none         &none     &none &none &none &none &none          &none         &none
            >;
        };

        layer_one {
            bindings = <
            &none &kp DE_AMPR &kp DE_AMPR &quotes    &kp DE_AT   &none                               &none         &cbr          &prn           &brc         &abk           &none
            &none &kp DE_SCLN &kp DE_COLN &ques_exlm &kp DE_COMM &none                               &none         &mt LGUI LEFT &mt LCTRL DOWN &mt LSHFT UP &mt LALT RIGHT &none
            &none &kp DE_HASH &kp DE_DLR  &kp DE_DOT &kp DE_BSLS &to DEFAULT &none &none &none &none &kp BACKSPACE &kp TAB       &to LAYER_TWO  &kp ENTER    &kp ESCAPE     &none
                                          &none      &none       &none       &none &none &none &none &none         &none         &none
            >;
        };

        layer_two {
            bindings = <
            &none &kp DE_CIRC      &kp DE_CIRC       &kp DE_DEG        &kp DE_PERC      &none                               &none     &kp KP_N7 &kp BACKSPACE   &kp KP_N8 &kp KP_N9 &none
            &none &mt LALT DE_ASTR &mt LSHFT DE_SLSH &mt LCTRL DE_PLUS &mt LGUI DE_MINS &none                               &none     &kp KP_N4 &kp DE_EQL      &kp KP_N5 &kp KP_N6 &none
            &none &kp DE_PIPE      &kp DE_UNDS       &kp DE_TILD       &kp DE_EURO      &to DEFAULT &none &none &none &none &kp KP_N0 &kp KP_N1 &to LAYER_THREE &kp KP_N2 &kp KP_N3 &none
                                                     &none             &none            &none       &none &none &none &none &none     &none     &none
            >;
        };

        layer_three {
            bindings =< 
            &none &bt BT_CLR      &bt BT_PRV       &bt BT_NXT         &none             &none                         &none &kp F7 &kp F8 &kp F9 &kp F12 &none
            &none &mt LALT C_PREV &mt LSHFT C_NEXT &mt LCTRL C_VOL_DN &mt LGUI C_VOL_UP &none                         &none &kp F4 &kp F5 &kp F6 &kp F11 &none
            &none &bt BT_SEL 0    &bt BT_SEL 1     &kp C_PLAY_PAUSE   &kp C_MUTE        &none &none &none &none &none &none &kp F1 &kp F2 &kp F3 &kp F10 &none
                                                   &none              &none             &none &none &none &none &none &none &none  &none
            >;
        };
    };
};